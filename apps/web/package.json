{
    "name": "web",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch server.ts",
        "dev:next": "next dev --turbopack",
        "dev:ws": "cross-env REALTIME_PROTOCOL=websocket tsx watch server.ts",
        "build": "next build",
        "start": "next start",
        "start:ws": "cross-env REALTIME_PROTOCOL=websocket node --import tsx/esm server.ts",
        "build:mobile": "MOBILE_BUILD=true next build",
        "sync:ios": "npm run build:mobile && npx cap sync ios",
        "sync:android": "npm run build:mobile && npx cap sync android",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@workspace/domain": "workspace:*",
        "@workspace/application": "workspace:*",
        "@workspace/adapter-common": "workspace:*",
        "@workspace/adapter-next": "workspace:*",
        "@workspace/db-in-memory": "workspace:*",
        "@workspace/db-postgres": "workspace:*",
        "@workspace/service-auth-jwt": "workspace:*",
        "@workspace/service-email-console": "workspace:*",
        "@workspace/service-realtime-sse": "workspace:*",
        "@workspace/service-realtime-websocket": "workspace:*",
        "@workspace/translations": "workspace:*",
        "@workspace/shared": "workspace:*",
        "@workspace/ui-react": "workspace:*",
        "@hookform/resolvers": "^3.9.1",
        "date-fns": "^4.1.0",
        "lucide-react": "^0.475.0",
        "next": "16.0.10",
        "next-themes": "^0.4.6",
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "react-hook-form": "^7.54.2",
        "reflect-metadata": "^0.2.2",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.17",
        "@types/node": "^20.19.25",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@types/ws": "^8.5.12",
        "@workspace/config-eslint": "workspace:^",
        "@workspace/config-typescript": "workspace:*",
        "cross-env": "^7.0.3",
        "eslint": "^9.39.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
