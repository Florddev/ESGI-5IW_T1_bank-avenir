{
    "extends": "@workspace/config-typescript/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@workspace/application/*": ["./src/*"],
            "@workspace/domain/*": ["../domain/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
