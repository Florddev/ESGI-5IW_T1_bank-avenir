{
    "extends": "@workspace/config-typescript/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@workspace/adapter-next/*": ["./src/*"],
            "@workspace/domain/*": ["../../../domain/*"],
            "@workspace/application/*": ["../../../application/*"],
            "@workspace/shared/*": ["../../../shared/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
