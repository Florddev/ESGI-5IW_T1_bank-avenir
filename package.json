{
    "name": "shadcn-monorepo-example",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
        "clean": "pnpm --recursive exec rm -rf node_modules",
        "clean:all": "pnpm --recursive exec rm -rf node_modules .turbo .next dist out && pnpm store prune"
    },
    "devDependencies": {
        "@workspace/config-eslint": "workspace:*",
        "@workspace/config-prettier": "workspace:*",
        "@workspace/config-typescript": "workspace:*",
        "prettier": "^3.7.4",
        "turbo": "^2.6.3",
        "typescript": "5.7.3"
    },
    "packageManager": "pnpm@10.4.1",
    "engines": {
        "node": ">=20"
    }
}